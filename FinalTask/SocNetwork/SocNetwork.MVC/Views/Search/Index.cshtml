@using System.Threading;
@using SocNetwork.Resources;
@using DAL.Entities.Users;
@using DAL.Entities.Friends;

@{
    ViewBag.Title = "Get";
}

@{
    if (Thread.CurrentPrincipal.Identity.IsAuthenticated)
    {
        @Html.Partial("_PartialAuthorizedUserPanel");
    }
    else
    {
        @Html.Partial("_PartialNotAuthorizedUserPanel");
    }
}

<div class="container content text-light">
    <div class="col-md-3">
        <div class="container content header center">
            <span>
                Search
            </span>
        </div>
        <div class="container content">
            <form action="/Search/Index?Page=@Model.Page" method="post">
                <div class="form-group">
                    <label for="Firstname">@Captions.Firstname</label>
                    <input type="text" class="form-control" name="Firstname" />
                </div>
                <div class="form-group">
                    <label for="Lastname">@Captions.Lastname</label>
                    <input type="text" class="form-control" name="Lastname" />
                </div>
                <div class="form-group">
                    <label for="City">City</label>
                    <input type="text" class="form-control" name="City" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Search" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-9">
        <div class="container content header">
            <span>@Captions.Users</span>
        </div>
        <div class="container content">
            <table>
                @foreach (var u in Model.Users)
                {
                    <tr>
                        <td style="width:5%;"><a href="/user/@u.Id"><img src="~/Content/Images/default-avatar.png" class="avatar-small" /></a></td>
                        <td style="width:25%; text-align:left;"><a href="/user/@u.Id">@u.Firstname @u.Surname</a></td>
                        <td style="text-align:right; width:50%;">
                            @if (Thread.CurrentPrincipal.Identity.IsAuthenticated)
                            { 
                                int id = int.Parse(Thread.CurrentPrincipal.Identity.Name);
                                if (!((List<Friends>)u.Friends).Exists(p => p.UserId == id || p.FriendId == id) && u.Id != id)
                                {
                                    <a href="/user/@u.Id/add" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> @Captions.AddFriend</a>
                                }
                                else
                                if (u.Id != id)
                                {
                                    <a href="/user/@u.Id/dismiss" class="btn btn-danger"><span class="glyphicon glyphicon-minus"></span> @Captions.Remove</a>
                                }
                                <a href="#" class="btn btn-primary">@Captions.WriteMsg</a>
                            }
                        </td>
                    </tr>
                }
            </table>
            <!--Page navigation-->
            <table>
                <tr>
                    <td></td>
                    <td width="100%" align="right">
                        <div>
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    @{
                                        if (Model.Page > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="/Search/Index?Page=@(Model.Page-1)" aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                    <span class="sr-only">Previous</span>
                                                </a>
                                            </li>
                                            <li class="page-item"><a class="page-link" href="/Search/Index?Page=@(Model.Page-1)">@(Model.Page - 1)</a></li>
                                            <li class="page-item active"><a class="page-link" href="/Search/Index?Page=@Model.Page">@Model.Page</a></li>
                                        }
                                        else
                                        {
                                            <li class="page-item disabled">
                                                <a class="page-link" href="#" aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                    <span class="sr-only">Previous</span>
                                                </a>
                                            </li>
                                            <li class="page-item active"><a class="page-link" href="/Search/Index?Page=@Model.Page">@Model.Page</a></li>
                                        }
                                        if (((List<User>)Model.Users).Any())
                                        {
                                            <li class="page-item"><a class="page-link" href="/Search/Index?Page=@(Model.Page+1)">@(Model.Page + 1)</a></li>
                                            <li class="page-item">
                                                <a class="page-link" href="/Search/Index?Page=@(Model.Page+1)" aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                    <span class="sr-only">Next</span>
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item disabled">
                                                <a class="page-link" href="#" aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                    <span class="sr-only">Next</span>
                                                </a>
                                            </li>
                                        }
                                    }
                                </ul>
                            </nav>
                        </div>
                    </td>
                </tr>
            </table>
            <!--End page navigation-->
        </div>
    </div>
</div>