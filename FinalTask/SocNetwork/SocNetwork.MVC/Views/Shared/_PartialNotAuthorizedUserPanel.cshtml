<div class="container content header">
    <table style="width:100%">
        <tr>
            <td style="width:50%">
            </td>
            <td style="text-align:right; width:50%">
                <span class="user_action"><a class="btn-link white" data-toggle="modal" data-target="#registrationModal"><span class="glyphicon glyphicon-user"></span> Registration</a></span>
                <span class="user_action"><a class="btn-link white" data-toggle="modal" data-target="#loginModal"><span class="glyphicon glyphicon-log-in"></span> Login</a></span>
            </td>
        </tr>
    </table>
</div>

<!-- LoginModal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content content-dark">
            <div class="modal-header">
                <h5 class="modal-title text-light">Login</h5>
                <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body center text-light">
                <form action="/Account/Logon" method="post">
                    <div class="form-group">
                        <input type="email" name="Email" class="form-control" placeholder="E-mail" />
                    </div>
                    <div class="form-group">
                        <input type="password" name="Password" class="form-control" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label class="lbl">
                                <input type="checkbox" />Remember me
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn" value="Login" />
                        <a class="btn btn-primary" data-toggle="modal" data-target="#registrationModal" data-dismiss="modal">Don't have an account?</a>
                    </div>
                    <div>
                        <a class="btn-link">Forgot password?</a>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- RegistrationModal -->
<div class="modal fade" id="registrationModal" tabindex="-1" role="dialog" aria-labelledby="registrationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content content-dark">
            <div class="modal-header">
                <h5 class="modal-title text-light">Registration</h5>
                <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body center">
                <form action="/create-user" method="post">
                    <div class="form-group">
                        <input type="text" name="Firstname" class="form-control" placeholder="Firstname" />
                    </div>
                    <div class="form-group">
                        <input type="text" name="Lastname" class="form-control" placeholder="Lastname" />
                    </div>
                    <div class="form-group">
                        <input type="email" name="Email" class="form-control" placeholder="E-mail" />
                    </div>
                    <div class="form-group">
                        <input type="password" name="Password" class="form-control" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Registration" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
