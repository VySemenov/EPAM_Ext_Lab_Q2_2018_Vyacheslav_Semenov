@using SocNetwork.Resources;

<div class="container content header">
    <h2>@Captions.EditProfile</h2>
</div>
<div class="container content text-light">
    <form action="/user/@Model.Id/edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id"/>
        <div class="form-group">
            <label for="Firstname">@Captions.Firstname</label>
            <input type="text" class="form-control" name="Firstname" value="@Model.Firstname.Trim(' ')" />
        </div>
        <div class="form-group">
            <label for="Lastname">@Captions.Lastname</label>
            <input type="text" class="form-control" name="Lastname" value="@Model.Surname.Trim(' ')" />
        </div>
        <div class="form-group">
            <label for="Email">@Captions.Email</label>
            <input type="email" class="form-control" name="Email" value="@Model.Email.Trim(' ')" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="@Captions.Save"/>
        </div>
    </form>
</div>
