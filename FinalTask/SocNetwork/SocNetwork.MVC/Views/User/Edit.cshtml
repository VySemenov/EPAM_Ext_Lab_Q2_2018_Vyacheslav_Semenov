@using SocNetwork.Resources;

<div class="container content header">
    <h2>@Captions.EditProfile</h2>
</div>
<div class="container content text-light">
    <form action="/user/@Model.User.Id/edit" method="post">
        <input type="hidden" name="Id" value="@Model.User.Id" />
        <div class="form-group">
            <label for="Firstname">@Captions.Firstname</label>
            <input type="text" class="form-control" name="Firstname" value="@Model.User.Firstname.Trim(' ')" />
        </div>
        <div class="form-group">
            <label for="Surname">@Captions.Lastname</label>
            <input type="text" class="form-control" name="Surname" value="@Model.User.Surname.Trim(' ')" />
        </div>
        <div class="form-group">
            <label for="Email">@Captions.Email</label>
            <input type="email" class="form-control" name="Email" value="@Model.User.Email.Trim(' ')" />
        </div>
        <div class="form-group">
            <label for="Select">@Captions.Role</label>
            <select class="form-control" id="Select" name="UserRoleId">
                @foreach (var r in Model.UserRoles)
                {
                    if ((int)r == Model.User.UserRoleId)
                    {
                    <option selected value="@((int)r)">@r</option>
                    }
                    else
                    {
                        <option value="@((int)r)">@r</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="@Captions.Save" />
        </div>
    </form>
</div>
