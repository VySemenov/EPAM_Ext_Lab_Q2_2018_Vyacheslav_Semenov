@model SocNetwork.Models.ViewModels.User.RegistrationViewModel
@using SocNetwork.Resources;

@{
    ViewBag.Title = "Registration";
}
<div class="container short header center">
    <h2>@Captions.Registration</h2>
</div>
<div class="container center content short">
    <div class="text-danger">@Model.ErrorMessage</div>
    <form action="/registration" method="post">
        <div class="form-group">
            <input type="text" name="Firstname" class="form-control" value="@Model.User.Firstname" placeholder="@Captions.Firstname" maxlength="16" required />
        </div>
        <div class="form-group">
            <input type="text" name="Surname" class="form-control" value="@Model.User.Surname" placeholder="@Captions.Lastname" maxlength="16" required />
        </div>
        <div class="form-group">
            <input type="email" name="Email" class="form-control" value="@Model.User.Email" placeholder="@Captions.Email" maxlength="20" required />
        </div>
        <div class="form-group">
            <input type="password" name="Password" class="form-control" placeholder="@Captions.Password" maxlength="16" required />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="@Captions.Registration" />
        </div>
    </form>
</div>
