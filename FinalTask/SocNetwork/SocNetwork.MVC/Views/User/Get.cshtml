@using System.Threading;
@{
    ViewBag.Title = "Get";
}

@{
    if (Thread.CurrentPrincipal.Identity.IsAuthenticated)
    {
        @Html.Partial("_PartialAuthorizedUserPanel");
    }
    else
    {
        @Html.Partial("_PartialNotAuthorizedUserPanel");
    }
}
<div class="container content text-light">
    <div class="row">
        <div class="col-md-3">
            <h3 class="center">
                @ViewBag.User.Firstname @ViewBag.User.Surname
            </h3>
        </div>
        <div class="col-md-5">

        </div>
    </div>
    <div class="row">
        <div class="col-md-3 center">
            <div>
                <img class="avatar" src="~/Content/Images/default-avatar.png" />
            </div>
            <div>
                <span class="user_action"><a class="btn-link"><span class="glyphicon glyphicon-pencil"></span> Написать сообщение</a></span>
                <br /><span class="user_action"><a class="btn-link"><span class="glyphicon glyphicon-plus"></span> Добавить в друзья</a></span>
            </div>
        </div>
        <div class="col-md-5">
            <h4>E-mail: @ViewBag.User.Email</h4>
            <h4>Phone: @ViewBag.User.Phone</h4>
        </div>
    </div>
</div>


